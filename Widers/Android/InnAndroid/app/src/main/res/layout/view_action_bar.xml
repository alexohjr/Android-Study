<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_action_bar_leftEmptyView"
        android:layout_width="42dp"
        android:layout_height="56dp"
        android:visibility="gone"
        />

    <View
        android:id="@+id/v_action_bar_emptyView"
        android:layout_width="42dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/v_action_bar_emptyView"
        android:layout_toRightOf="@+id/v_action_bar_leftEmptyView">
        <TextView
            android:id="@+id/v_action_bar_titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/ActionBarTitleStyle"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/v_action_bar_rightTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/v_action_bar_rightIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:visibility="gone"/>

</RelativeLayout>


