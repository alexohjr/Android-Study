<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/comm_popup_default_width"
    android:layout_height="@dimen/comm_popup_default_height"
    android:orientation="vertical" >
    <include layout="@layout/comm_dialog_title_bar" />
    <ListView
        android:id="@+id/lv_select_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="8"
        >
    </ListView>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:text="선택" />

</LinearLayout>