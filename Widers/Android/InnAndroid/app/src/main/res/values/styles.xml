<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="style_width_0">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>


    <style name="home_location_tab_default" >
        <item name="android:background">@color/lightgrey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- EZ 컨트롤 -->
    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_btn_gray" parent="style_width_0">
        <item name="android:layout_weight">600</item>
        <item name="android:background">@drawable/m_btn_common_gray_round</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_btn_blue" parent="style_width_0">
        <item name="android:background">@drawable/m_btn_common_red_round</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 팝업 제목 created by hojun baek -->
    <style name="popup_title">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 팝업 메시지 created by hojun baek -->
    <style name="popup_message">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- 팝업 취소 버튼 created by hojun baek -->
    <style name="btn_popup_cancel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_popup_cancel</item>
    </style>

    <!-- 팝업 확인 버튼 created by hojun baek -->
    <style name="btn_popup_confirm">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_popup_confirm</item>
    </style>

    <!-- EZ 컨트롤 -->


    <style name="btn_dialog_style" >
        <item name="android:background">@mipmap/btn_dialog_close</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_fill_parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="common_text_defualt_black_c333333_fill" parent="style_fill_parent">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="common_text_number_pad" parent="common_text_defualt_black_c333333_fill">
        <item name="android:textSize">@dimen/text_default_number_pad</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
