<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:weightSum="10"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="1" android:weightSum="5"
        android:layout_height="match_parent" android:layout_gravity="bottom" android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeTabButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btn_home_off"
            >
        </Button>
        <Button
            android:id="@+id/searchTabButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btn_search_off">
        </Button>

        <Button
            android:id="@+id/recommendTabButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btn_recommend_off">
        </Button>

        <Button
            android:id="@+id/roomServiceTabButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btn_roomservice_off">
        </Button>

        <Button
            android:id="@+id/mypageTabButton"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btn_mypage_off">
        </Button>
    </LinearLayout>

</LinearLayout>
