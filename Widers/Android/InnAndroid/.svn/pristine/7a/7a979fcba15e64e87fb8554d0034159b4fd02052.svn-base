<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="#EDEDEA"
    android:layout_height="match_parent" android:weightSum="10"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="2.5"
        android:layout_height="0dip" android:background="#EDEDEA"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="3"
            android:background="#EDEDEA"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/thumbnailImageView" android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="11sp"
                android:layout_marginLeft="11sp"
                android:layout_marginTop="11sp"
                android:adjustViewBounds="true"
                android:maxHeight="100sp"
                android:maxWidth="100sp"
                android:src="@drawable/noimage_uploadphoto"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dip" android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_margin="11sp"
                android:orientation="vertical" >



                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/roomNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_weight="3"/>

                        <TextView
                            android:id="@+id/reserveTextView"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예약가능"
                            android:textColor="@color/lightcoral"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >


                        <LinearLayout
                            android:layout_width="240dp" android:orientation="horizontal"
                            android:layout_height="25dp">


                            <TextView
                                android:text="숙박" android:background="@color/lightcoral"
                                android:alpha="80" android:textColor="#ffffff" android:gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_margin="2dp"
                                />


                            <TextView
                                android:layout_margin="2dp"
                                android:text="숙박"
                                android:layout_width="111dp"
                                android:layout_height="25dp" android:textStyle="bold"
                                android:id="@+id/overnightPriceTextView" />

                            <TextView
                                android:layout_margin="2dp"
                                android:text="20:00~"
                                android:layout_width="80dp" android:textColor="#000000"
                                android:layout_height="25dp" android:textStyle="bold"
                                android:id="@+id/overnightTimeTextView" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="240dp" android:orientation="horizontal"
                            android:layout_height="25dp">

                            <TextView
                                android:text="대실" android:background="@color/lightcoral"
                                android:alpha="80" android:textColor="#ffffff" android:gravity="center"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_margin="2dp"
                                />
                            <TextView
                            android:layout_margin="2dp"
                            android:text="대실"
                            android:layout_width="111dp"
                            android:layout_height="25dp" android:textStyle="bold"
                            android:id="@+id/dayusePriceTextView" />

                            <TextView
                                android:layout_margin="2dp"
                                android:text="2시간"
                                android:layout_width="80dp"
                                android:layout_height="25dp" android:textColor="#000000"
                                android:textStyle="bold"
                                android:id="@+id/dayuseTimeTextView" />
                        </LinearLayout>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="151dp" android:orientation="horizontal"
                        android:layout_height="25dp">

                        <TextView
                            android:text="인원"
                            android:alpha="80" android:gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:id="@+id/personTextView"
                            />
                        <TextView
                            android:layout_margin="2dp"
                            android:text="최대인원"
                            android:layout_width="111dp"
                            android:layout_height="25dp" android:textStyle="bold"
                            android:id="@+id/maxPersonTextView" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="#CDCDD0" >
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>