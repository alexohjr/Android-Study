<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#EDEDEA"
    android:orientation="vertical" >
      <TextView
        android:id="@+id/TV_depSelect"
        android:layout_width="match_parent"  android:background="#EDEDEA" android:textColor="#000000"
        android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="품종: " />


    <ExpandableListView
        android:id="@+id/dep_list"
        android:layout_width="match_parent" android:divider="#777" android:dividerHeight="0px"  android:focusable="true"  
        android:layout_height="wrap_content" android:background="#EDEDEA" android:groupIndicator="@null">
    </ExpandableListView>

 
</LinearLayout>
