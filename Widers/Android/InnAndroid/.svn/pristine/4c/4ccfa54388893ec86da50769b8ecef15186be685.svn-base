<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#EDEDEA" android:weightSum="10"
    android:orientation="vertical" 
     >

    <com.and.andelectronics.view.widget.MainActionBar
        android:id="@+id/mainActionBar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        >
    </com.and.andelectronics.view.widget.MainActionBar>

    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  android:weightSum="12" 
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/login_tvId1"
                    android:layout_width="fill_parent"
                   android:layout_height="0dip" android:layout_weight="1"
                   
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                      android:layout_marginTop="8sp"
                    android:text="내정보"
                    android:textColor="#77787b"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent" 
                    android:layout_height="0dip" android:layout_weight="1"
                     android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="매장이름" />

                    <EditText
                        android:id="@+id/ET_admin_storeName"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="매장이름"
                        android:lines="1"
                        android:singleLine="true" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="사업자번호" />

                    <EditText
                        android:id="@+id/ET_admin_busiNo"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off" 
                        android:hint="사업자번호" android:inputType="number"
                        android:lines="1" android:maxLength="10"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="주소" />

                    <EditText
                        android:id="@+id/ET_admin_address"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="주소"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="대표자 이름" />

                    <EditText
                        android:id="@+id/ET_admin_ownName"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="대표자 명"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="아이디" />

                    <EditText
                        android:id="@+id/ET_admin_userId"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="아이디"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="비밀번호" />

                    <EditText
                        android:id="@+id/ET_admin_passwd"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="비밀번호" android:inputType="textPassword"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                   android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="비밀번호 확인" />

                    <EditText
                        android:id="@+id/ET_admin_passwdConfirm"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="비밀번호 확인" android:inputType="textPassword"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="휴대폰번호" />

                    <EditText
                        android:id="@+id/ET_admin_hpNo"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="휴대폰 번호" android:inputType="number"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="8sp"
                    android:weightSum="72" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="23.5"
                        android:text="매장전화번호" />

                    <EditText
                        android:id="@+id/ET_admin_tellNo"
                        android:layout_width="0dip"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_weight="48.5"
                        android:background="@drawable/inputbox_off"
                        android:hint="매장전화번호" android:inputType="number"
                        android:lines="1"
                        android:singleLine="true" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip" android:layout_weight="1"
                    android:layout_marginTop="8sp" >

                    <ImageView
                        android:id="@+id/IV_registration"
                        android:layout_width="wrap_content"
                        android:layout_height="40sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_login_btn" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="6sp"
                        android:gravity="center"
                        android:text="수정하기"
                        android:textSize="18sp"
                        android:textColor="#ffffff" />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>