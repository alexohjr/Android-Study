<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        card_view:cardCornerRadius="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="355dp" android:src="@drawable/noimage_uploadphoto"
                android:layout_height="210dp" android:scaleType="fitXY"
                android:id="@+id/image"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ddd"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:id="@+id/remarkTextView" />



            <LinearLayout
                android:layout_width="210dp" android:layout_gravity="bottom|start"
                android:layout_height="60dp" android:gravity="bottom"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="151dp" android:orientation="horizontal"
                    android:layout_height="25dp">


                    <TextView
                        android:text="거리"
                        android:layout_width="40dp" android:textColor="#ffffff"
                        android:layout_height="25dp"
                        />
                    <TextView
                        android:text="거리"
                        android:layout_width="210dp" android:textColor="#ffffff"
                        android:layout_height="25dp"
                        android:id="@+id/distanceTextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp" android:orientation="horizontal"
                    android:layout_height="25dp">

                    <TextView
                        android:text="주소" android:maxLines="1" android:textColor="#ffffff"
                        android:layout_width="200dp"
                        android:layout_height="25dp"
                        android:id="@+id/addressTextView"
                        />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="151dp" android:layout_gravity="bottom|end"
                android:orientation="vertical" android:gravity="bottom"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="151dp" android:orientation="horizontal"
                    android:layout_height="25dp">


                    <TextView
                        android:text="숙박" android:background="@color/lightcoral"
                        android:alpha="80" android:textColor="#ffffff" android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        />
                    <TextView
                        android:text="숙박"
                        android:layout_width="111dp" android:textColor="#ffffff"
                        android:layout_height="25dp" android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:id="@+id/overnightPriceTextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="151dp" android:orientation="horizontal"
                    android:layout_height="25dp">

                    <TextView
                        android:text="대실" android:background="@color/lightcoral"
                        android:alpha="80" android:textColor="#ffffff" android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        />
                    <TextView
                        android:text="대실"
                        android:layout_width="111dp" android:textColor="#ffffff"
                        android:layout_height="25dp" android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:id="@+id/dayusePriceTextView" />
                </LinearLayout>

            </LinearLayout>



        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>